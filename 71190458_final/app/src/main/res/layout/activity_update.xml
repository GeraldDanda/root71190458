<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:gravity="center"
    tools:context=".UpdateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:textColor="@color/colorBlue"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:layout_marginBottom="40dp"/>

        <EditText
            android:id="@+id/edtUpdateJudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Judul Film"/>

        <EditText
            android:id="@+id/edtUpdateGenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtUpdateJudul"
            android:hint="Genre"/>

        <EditText
            android:id="@+id/edtUpdateNamaProduser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtUpdateGenre"
            android:hint="Nama Produser"/>

        <EditText
            android:id="@+id/edtUpdateNamaPemeranUtama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtUpdateNamaProduser"
            android:hint="Nama Pemeran Utama"/>

        <EditText
            android:id="@+id/edtUpdateTahun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtUpdateNamaPemeranUtama"
            android:hint="Tahun Rilis"/>

        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:background="@drawable/background_button"
            android:theme="@style/Button.color"
            android:layout_marginTop="24dp"
            android:text="@string/update"
            android:textAlignment="center"
            android:layout_below="@+id/edtUpdateTahun"/>

    </LinearLayout>


</RelativeLayout>